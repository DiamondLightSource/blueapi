{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":automergeStableNonMajor"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "matchManagers": [
        "pip_requirements"
      ],
      "description": "Group non-major indirect python versions together"
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "matchManagers": [
        "pep621"
      ],
      "description": "Group patch direct python versions together"
    },
    {
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "matchManagers": [
        "github-actions"
      ],
      "description": "Group non-major github action versions together"
    }
  ]
}
