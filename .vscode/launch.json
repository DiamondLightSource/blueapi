{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Unit Test",
            "type": "debugpy",
            "request": "launch",
            "justMyCode": false,
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
        },
        {
            "name": "Attach debugger",
            "type": "debugpy",
            "request": "attach",
            "justMyCode": false,
            "connect": {
                "host": "0.0.0.0",
                "port": 5678,
            },
            "pathMappings": [
                {
                    "localRoot": "${input:mount_path}",
                    "remoteRoot": "/workspaces_git"
                },
                {
                    "localRoot": "./src/blueapi",
                    "remoteRoot": "/venv/lib/python3.1*/site-packages/blueapi"
                },
                {
                    "localRoot": ".",
                    "remoteRoot": "/blueapi"
                },
            ]
        },
        {
            "name": "Blueapi Server",
            "type": "debugpy",
            "request": "launch",
            "justMyCode": false,
            "module": "blueapi",
            "args": "serve",
            "env": {
                "OTLP_EXPORT_ENABLED": "false"
            },
        },
        {
            "name": "Blueapi Server (Custom Config)",
            "type": "debugpy",
            "request": "launch",
            "justMyCode": false,
            "module": "blueapi",
            "args": "--config ${input:config_path} serve",
            "env": {
                "OTLP_EXPORT_ENABLED": "false"
            },
        },
        {
            "name": "Blueapi Controller",
            "type": "debugpy",
            "request": "launch",
            "justMyCode": false,
            "module": "blueapi",
            "args": "controller ${input:controller_args}",
            "env": {
                "OTLP_EXPORT_ENABLED": "false"
            },
        },
        {
            "name": "Blueapi Controller (Custom Config)",
            "type": "debugpy",
            "request": "launch",
            "justMyCode": false,
            "module": "blueapi",
            "args": "-c ${input:config_path} controller ${input:controller_args}",
            "env": {
                "OTLP_EXPORT_ENABLED": "false"
            },
        },
    ],
    "inputs": [
        {
            "id": "mount_path",
            "type": "promptString",
            "description": "Mounted location of PVC containing /workspace_git/",
            "default": ""
        },
        {
            "id": "controller_args",
            "type": "promptString",
            "description": "Arguments to pass to controller",
            "default": ""
        },
        {
            "id": "config_path",
            "type": "promptString",
            "description": "Path to configuration YAML file",
            "default": ""
        },
    ]
}
