{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            // Config to Build, Deploy and Run/Debug a new version of the BluAPI container
            // via the gcr.io/diamond-privreg/athena-dev bucket.
            "name": "Kubernetes: Run/Debug",
            "type": "cloudcode.kubernetes",
            "request": "launch",
            "skaffoldConfig": "${workspaceFolder}/skaffold.yaml",
            "watch": true,
            "cleanUp": false,
            "portForward": true,
            "imageRegistry": "gcr.io/diamond-privreg/athena-dev/blueapi",
            "debug": [
                {
                    "image": "gcr.io/diamond-privreg/athena-dev/blueapi",
                    "containerName": "blueapi",
                    "justMyCode": false,
                    "sourceFileMap": {
                        // Maps local files to in-container ones. For Python this should be
                        // < Path to src folder > : < Path to site-packages folder > 
                        "${workspaceFolder}/src": "/venv/lib/python3.11/site-packages"
                    }
                }
            ]
        },
        {
            "name": "Debug Rest Service",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.blueapi.rest.main:app",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Debug Unit Test",
            "type": "python",
            "request": "launch",
            "justMyCode": false,
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTEST_ADDOPTS": "--no-cov"
            }
        },
        {
            "name": "Run Service",
            "type": "python",
            "request": "launch",
            "justMyCode": false,
            "module": "blueapi.cli",
            "args": [
                "serve"
            ]
        },
        {
            "name": "Controller (get plans)",
            "type": "python",
            "request": "launch",
            "justMyCode": false,
            "module": "blueapi.cli",
            "args": [
                "controller",
                "plans"
            ]
        },
        {
            "name": "Controller (get devices)",
            "type": "python",
            "request": "launch",
            "justMyCode": false,
            "module": "blueapi.cli",
            "args": [
                "controller",
                "devices"
            ]
        },
        {
            "name": "Controller (sleep)",
            "type": "python",
            "request": "launch",
            "justMyCode": false,
            "module": "blueapi.cli",
            "args": [
                "controller",
                "run",
                "sleep",
                "-p",
                "{\"time\": 5}"
            ]
        }
    ]
}